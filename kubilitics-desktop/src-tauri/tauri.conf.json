{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Kubilitics",
  "version": "1.0.0",
  "identifier": "com.kubilitics.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/kubilitics-backend",
      "binaries/kubilitics-ai",
      "binaries/kcli"
    ],
    "resources": [],
    "copyright": "Â© 2026 Kubilitics",
    "category": "DeveloperTool",
    "shortDescription": "The Kubernetes OS",
    "longDescription": "Making Kubernetes finally human-friendly",
    "createUpdaterArtifacts": true,
    "macOS": {
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "frameworks": null,
      "exceptionDomain": null,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.comodoca.com"
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "active": false,
      "endpoints": [
        "https://releases.kubilitics.dev/update/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": ""
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Kubilitics",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "url": "index.html"
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ],
      "csp": "default-src 'self' tauri: asset: blob:; connect-src 'self' tauri: ipc: http://ipc.localhost http://localhost:819 ws://localhost:819 http://localhost:8081 ws://localhost:8081; img-src 'self' data: asset: tauri: blob:; style-src 'self' 'unsafe-inline' asset: tauri:; script-src 'self' asset: tauri: blob:; font-src 'self' asset: tauri: data:"
    }
  }
}